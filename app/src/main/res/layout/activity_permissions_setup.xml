<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C001E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Ubuntu Touch Launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Configuração de Permissões"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="Para uma melhor experiência, conceda as permissões abaixo"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/launcherContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/permission_card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/launcherStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Launcher Padrão"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Definir como tela inicial padrão do dispositivo"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/launcherButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Definir como Padrão"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/restrictedContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/permission_card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configurações Restritas"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apps instalados por APK precisam desta permissão. Abra as configurações do app, toque no menu (⋮) e selecione Permitir configurações restritas."
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/restrictedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Abrir Configurações do App"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overlayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/permission_card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/overlayStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobreposição de Tela"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Necessário para detectar gestos de borda"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/overlayButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Conceder Permissão"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/accessibilityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/permission_card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/accessibilityStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serviço de Acessibilidade"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Necessário para gestos de navegação (voltar, home, recentes)"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/accessibilityButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Ativar Serviço"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/permission_card_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/notificationStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acesso às Notificações"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Necessário para mostrar badges de notificação nos apps"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/notificationButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Habilitar Acesso"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange_bg"/>

        </LinearLayout>

        <TextView
            android:id="@+id/allPermissionsGranted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todas as permissões foram concedidas!"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Pular por agora"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_continue_bg"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

</ScrollView>
