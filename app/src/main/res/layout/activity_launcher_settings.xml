<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C001E">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#DD4814">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Voltar"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configurações do Launcher"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- ScrollView content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Content principal -->
            <LinearLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Seção de Formato dos Ícones -->
                <LinearLayout
                    android:id="@+id/iconShapeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formato dos Ícones"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha o formato dos ícones dos aplicativos"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                    <!-- Visualização dos formatos -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/iconShapeOptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Original -->
                            <LinearLayout
                                android:id="@+id/shapeOriginal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_marginEnd="8dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/icon_shape_selector_bg">

                                    <ImageView
                                        android:id="@+id/previewOriginal"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/ic_launcher"/>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Original"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <!-- Squircle -->
                            <LinearLayout
                                android:id="@+id/shapeSquircle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_marginEnd="8dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/icon_shape_selector_bg">

                                    <ImageView
                                        android:id="@+id/previewSquircle"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_shape_squircle"
                                        android:src="@mipmap/ic_launcher"
                                        android:clipToOutline="true"/>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Squircle"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <!-- Círculo -->
                            <LinearLayout
                                android:id="@+id/shapeCircle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_marginEnd="8dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/icon_shape_selector_bg">

                                    <ImageView
                                        android:id="@+id/previewCircle"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_shape_circle"
                                        android:src="@mipmap/ic_launcher"
                                        android:clipToOutline="true"/>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Círculo"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <!-- Quadrado Arredondado -->
                            <LinearLayout
                                android:id="@+id/shapeRoundedSquare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_marginEnd="8dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/icon_shape_selector_bg">

                                    <ImageView
                                        android:id="@+id/previewRoundedSquare"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_shape_rounded_square"
                                        android:src="@mipmap/ic_launcher"
                                        android:clipToOutline="true"/>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Arredondado"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <!-- Gota -->
                            <LinearLayout
                                android:id="@+id/shapeTeardrop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/icon_shape_selector_bg">

                                    <ImageView
                                        android:id="@+id/previewTeardrop"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_shape_teardrop"
                                        android:src="@mipmap/ic_launcher"
                                        android:clipToOutline="true"/>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gota"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <!-- Launcher Padrão -->
                <LinearLayout
                    android:id="@+id/launcherContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/launcherStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Launcher Padrão"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Definir como tela inicial padrão do dispositivo"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/launcherButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Definir como Padrão"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_orange_bg"/>

                </LinearLayout>

                <!-- Configurações Restritas -->
                <LinearLayout
                    android:id="@+id/restrictedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Configurações Restritas"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apps instalados por APK precisam desta permissão. Abra as configurações do app, toque no menu (⋮) e selecione Permitir configurações restritas."
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/restrictedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Abrir Configurações do App"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_orange_bg"/>

                </LinearLayout>

                <!-- Sobreposição de Tela -->
                <LinearLayout
                    android:id="@+id/overlayContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/overlayStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sobreposição de Tela"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Necessário para detectar gestos de borda"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/overlayButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Conceder Permissão"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_orange_bg"/>

                </LinearLayout>

                <!-- Serviço de Acessibilidade -->
                <LinearLayout
                    android:id="@+id/accessibilityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/accessibilityStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Serviço de Acessibilidade"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Necessário para gestos de navegação (voltar, home, recentes)"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/accessibilityButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Ativar Serviço"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_orange_bg"/>

                </LinearLayout>

                <!-- Acesso às Notificações -->
                <LinearLayout
                    android:id="@+id/notificationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/notificationStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_warning"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acesso às Notificações"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Necessário para mostrar badges de notificação nos apps"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/notificationButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Habilitar Acesso"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_orange_bg"/>

                </LinearLayout>

                <!-- Status de todas permissões -->
                <TextView
                    android:id="@+id/allPermissionsGranted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas as permissões foram concedidas!"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- Spacer to push footer to bottom when content is small -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Footer section -->
            <LinearLayout
                android:id="@+id/footerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:paddingBottom="32dp">

                <!-- Seção Sobre com ícone de ? -->
                <LinearLayout
                    android:id="@+id/aboutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_help"
                        android:contentDescription="Sobre"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sobre o Ubuntu Touch Launcher"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Abrir"/>

                </LinearLayout>
                
                <!-- Ajuda e Suporte -->
                <LinearLayout
                    android:id="@+id/supportContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="Ajuda e Suporte"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajuda e Suporte"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dúvidas, feedback e contato com o desenvolvedor"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Abrir"/>

                </LinearLayout>

                <!-- Versão do App -->
                <LinearLayout
                    android:id="@+id/versionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/permission_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:contentDescription="Versão"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Versão"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/versionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="v0.1.0 (Beta)"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>


                <!-- Créditos dos desenvolvedores -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desenvolvido por"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/developer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6uy_1nc06n1t0"
                        android:textColor="#DD4814"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="e"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/developer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WenDev21"
                        android:textColor="#DD4814"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

